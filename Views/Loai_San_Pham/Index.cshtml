@model IEnumerable<Day09LabCF.Models.Loai_San_Pham>

@{
    ViewData["Title"] = "Danh sách lo?i s?n ph?m";
}

<div class="d-flex justify-content-between align-items-center mb-4 bg-info">
    <h1 class="text-primary fw-bold text-uppercase m-0">
        <i class="fa-solid fa-layer-group me-2"></i> @ViewData["Title"]
    </h1>
    <a asp-action="Create" class="btn btn-success shadow-sm">
        <i class="fa-solid fa-plus-circle me-1"></i> Thêm m?i
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <table class="table table-hover table-bordered align-middle mb-0">
            <thead class="table-primary text-center">
                <tr>
                    <th style="width: 15%">@Html.DisplayNameFor(model => model.MaLoai)</th>
                    <th style="width: 40%">@Html.DisplayNameFor(model => model.TenLoai)</th>
                    <th style="width: 20%">@Html.DisplayNameFor(model => model.TrangThai)</th>
                    <th style="width: 25%">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center fw-semibold">@item.MaLoai</td>
                            <td>@item.TenLoai</td>
                            <td class="text-center">
                                @if (item.TrangThai)
                                {
                                    <span class="badge bg-success px-3 py-2">
                                        <i class="fa-solid fa-circle-check me-1"></i> Ho?t ð?ng
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary px-3 py-2">
                                        <i class="fa-solid fa-circle-xmark me-1"></i> Ng?ng
                                    </span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Xem chi ti?t">
                                        <i class="fa-solid fa-circle-info"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Ch?nh s?a">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Xóa"
                                       onclick="return confirm('B?n có ch?c mu?n xóa lo?i s?n ph?m này không?')">
                                        <i class="fa-solid fa-trash-can"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted py-5">
                            <i class="fa-solid fa-inbox fa-2x mb-2 d-block"></i>
                            Không có d? li?u ð? hi?n th?
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
