                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="TrangThai" value="true"
                                   checked="@(Model.TrangThai == true)" />
                            <label class="form-check-label text-success fw-semibold">
                                <i class="fa-solid fa-circle-check me-1"></i> Ho?t ð?ng
                            </label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="TrangThai" value="false"
                                   checked="@(Model.TrangThai == false)" />
                            <label class="form-check-label text-danger fw-semibold">
                                <i class="fa-solid fa-circle-xmark me-1"></i> Ng?ng ho?t ð?ng
                            </label>
                        </div>
                    </div>

                    <div class="mt-4 d-flex justify-content-between">
