                            <i class="fa-solid fa-arrow-left me-1"></i> Quay l?i
                        </a>
                        <button type="submit" class="btn btn-warning text-dark">
                            <i class="fa-solid fa-floppy-disk me-1"></i> C?p nh?t
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
